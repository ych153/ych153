#include<bits/stdc++.h>
using namespace std;
#define R register
#define forup(i,a,b,n) for(int i=a;i<=b;i+=n)
#define fordown(i,a,b,n) for(int i=a;i>=b;i-=n)
#define forup_q(i,a,b,n) for(R int i=a;i<=b;i+=n)
#define fordown_q(i,a,b,n) for(R int i=a;i>=b;i-=n)
long long b,p,k,ans=1; 
int main(){
	scanf("%d%d%d",&b,&p,&k);
	long long np=p,nb=b;
	while(np){
		if(np&1)ans=(ans%k)*(nb%k)%k;
		nb=(nb%k)*(nb%k)%k;
		np>>=1;
	}
	printf("%d^%d mod %d=%d",b,p,k,ans%k);
	return 0;
}
